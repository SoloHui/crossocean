{
  "version": 2,
  "configurePresets": [
    {
      "name": "windows_debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows_debug",
      "cacheVariables": {
        "BUILD_FORMAT": "ON",
        "BUILD_TEST": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out"
      }
    },
    {
      "name": "windows_release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows_release",
      "cacheVariables": {
        "BUILD_FORMAT": "OFF",
        "BUILD_TEST": "OFF",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out"
      }
    },
    {
      "name": "linux_debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux_debug",
      "cacheVariables": {
        "BUILD_FORMAT": "ON",
        "BUILD_TEST": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out"
      }
    },
    {
      "name": "linux_release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux_release",
      "cacheVariables": {
        "BUILD_FORMAT": "OFF",
        "BUILD_TEST": "OFF",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out"
      }
    }
  ]
}